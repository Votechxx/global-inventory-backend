# ─────────────────────────────────────────────────────
# General App Settings
# ─────────────────────────────────────────────────────
NODE_ENV=production
APP_NAME=your_app_name
APP_PORT=3000                       # Port your NestJS app listens on
LOG_LEVEL=info                      # debug | info | warn | error
TIMEZONE=UTC



# ─────────────────────────────────────────────────────
# CORS Settings
# ─────────────────────────────────────────────────────
CORS_ORIGIN=http://frontend:3000   # Docker container name or external origin




# ─────────────────────────────────────────────────────
# Database (PostgreSQL)
# ─────────────────────────────────────────────────────
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_HOST=postgres-db                # Use Docker service name
DB_PORT=5432

DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}




# ─────────────────────────────────────────────────────
# Authentication / JWT
# ─────────────────────────────────────────────────────
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1h                  # e.g. 1h, 2d

TOKEN=your_api_testing_token       # For Swagger / testing





# ─────────────────────────────────────────────────────
# Email (SMTP)
# ─────────────────────────────────────────────────────
EMAIL_HOST=your_smtp_host
EMAIL_PORT=587                     # TLS (or 465 for SSL)
EMAIL=your_smtp_email_address
EMAIL_PASSWORD=your_smtp_password
EMAIL_FROM_NAME=YourApp Support





# ─────────────────────────────────────────────────────
# Application URLs
# ─────────────────────────────────────────────────────
FRONT_URL=http://frontend:3000      # Internal Docker network URL
FRONT_URL_DEV=http://localhost:3000
BASE_URL=http://app:3000            # Backend service inside Docker
BASE_URL_DEV=http://localhost:3000
BASE_URL_TEST=http://test-backend:3000





# ─────────────────────────────────────────────────────
# File Uploads / Assets
# ─────────────────────────────────────────────────────
UPLOAD_DIR=uploads/



# AWS S3
AWS_S3_ACCESS_KEY_ID=id-here
AWS_S3_SECRET_ACCESS_KEY=key-here
AWS_S3_BUCKET_NAME=bucket-name-here
AWS_S3_REGION=region-here





# ─────────────────────────────────────────────────────
# Feature Flags
# ─────────────────────────────────────────────────────
ENABLE_SWAGGER=true
ENABLE_EMAILS=true





# ─────────────────────────────────────────────────────
# Prisma (optional)
# ─────────────────────────────────────────────────────
PRISMA_SCHEMA=./prisma/schema.prisma
